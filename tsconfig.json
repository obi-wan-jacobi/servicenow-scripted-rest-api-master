{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./build",
        "rootDir": "./src",
        "allowJs": true,
        "target": "esnext",
        "module": "esnext",
        "sourceMap": false,
        "baseUrl": ".",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "src/tests"
    ]
}
